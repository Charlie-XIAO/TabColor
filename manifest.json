{
    "manifest_version": 2,
    "name": "TabColor",
    "version": "1.0",
    "description": "Adds a color to all new tabs opened.",
    "icons": {
        "24": "icons/color-palette.png"
    },
    
    "permissions": [
        "tabs",
        "activeTab",
        "theme",
        "storage"
    ],
    "background": {
        "scripts": [
            "color.js"
        ]
    },
    "browser_action": {
        "default_icon": "icons/color-palette.png",
        "default_title": "TitleBarColoring",
        "default_popup": "popup.html"
    }
}